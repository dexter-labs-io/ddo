# Dockerfile - safe for OpenShift (non-root, port 8080)

FROM python:3.11-slim

# Create non-root user
RUN useradd -m ddo && mkdir -p /app && chown -R ddo:ddo /app

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the application code
COPY . .

# Change ownership
RUN chown -R ddo:ddo /app

# Switch to non-root user
USER ddo

# Expose non-privileged port
EXPOSE 8080

# Run your app (update as needed)
CMD ["python", "main.py"]
